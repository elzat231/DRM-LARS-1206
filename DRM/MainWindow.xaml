<Window x:Class="XPlaneActivator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="X-Plane DRM Activator" Height="650" Width="800"
        ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen"
        Background="#FF2D2D30" Foreground="White">

    <Window.Resources>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#FF007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1BA1E2"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF005A9B"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FF555555"/>
                    <Setter Property="Foreground" Value="#FFAAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DeactivateButton" TargetType="Button">
            <Setter Property="Background" Value="#FFFF6B6B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFF5252"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FFE53935"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#FF555555"/>
                    <Setter Property="Foreground" Value="#FFAAAAAA"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#FF3F3F46"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" Background="#FF1E1E1E" Padding="20,15">
            <StackPanel>
                <TextBlock Text="X-Plane DRM Activator" FontSize="24" FontWeight="Bold" 
                          Foreground="#FF007ACC" HorizontalAlignment="Center"/>
                <TextBlock Text="Secure Activation System v2.0" FontSize="12" 
                          Foreground="#FFCCCCCC" HorizontalAlignment="Center" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
            <StackPanel MaxWidth="600">

                <!-- Activation Area -->
                <GroupBox Header="Activation Code Verification" Foreground="White" Margin="0,0,0,20">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold" Foreground="#FF007ACC"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>

                    <StackPanel Margin="10">
                        <TextBlock Text="Please enter your activation code:" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtActivationCode" Style="{StaticResource ModernTextBox}"
                                 Text="" MaxLength="50" 
                                 ToolTip="Format: XXXX-XXXX-XXXX-XXXX"/>

                        <StackPanel Margin="0,15,0,0">
                            <!-- First row buttons -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Button x:Name="btnActivate" Content="Online Activation" 
                                        Style="{StaticResource ModernButton}"
                                        Click="BtnActivate_Click" Width="140"/>
                                <Button x:Name="btnDeactivate" Content="Deactivate" 
                                        Style="{StaticResource DeactivateButton}"
                                        Click="BtnDeactivate_Click" Width="120"
                                        Visibility="Collapsed" IsEnabled="False"/>
                            </StackPanel>

                            <!-- Second row buttons -->
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="btnDiagnostic" Content="System Diagnostic" 
                                        Style="{StaticResource ModernButton}"
                                        Click="BtnDiagnostic_Click" Width="140"/>
                                <Button x:Name="btnActivationInfo" Content="Activation Info" 
                                        Style="{StaticResource ModernButton}"
                                        Click="BtnActivationInfo_Click" Width="120"
                                        Visibility="Collapsed" IsEnabled="False"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- System Information Area -->
                <GroupBox Header="System Information" Foreground="White" Margin="0,0,0,20">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold" Foreground="#FF007ACC"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>

                    <StackPanel Margin="10">
                        <TextBlock Text="Machine Code:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtMachineCode" Style="{StaticResource ModernTextBox}"
                                 IsReadOnly="True" Text="Generating..."/>

                        <TextBlock Text="Network Status:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                        <TextBlock x:Name="lblNetworkStatus" Text="Checking..." Foreground="#FFCCCCCC"/>

                        <TextBlock Text="Virtual File System:" FontWeight="SemiBold" Margin="0,15,0,5"/>
                        <TextBlock x:Name="lblVfsStatus" Text="Not Mounted" Foreground="#FFCCCCCC"/>

                        <!-- Fixed: Missing activation status information controls -->
                        <TextBlock x:Name="lblActivationStatusTitle" Text="Activation Status:" FontWeight="SemiBold" 
                                  Margin="0,15,0,5" Visibility="Collapsed"/>
                        <StackPanel x:Name="spActivationInfo" Orientation="Vertical" Visibility="Collapsed">
                            <TextBlock x:Name="lblActivationTime" Text="" Foreground="#FFCCCCCC" Margin="0,2"/>
                            <TextBlock x:Name="lblRemainingDays" Text="" Foreground="#FFCCCCCC" Margin="0,2"/>
                            <TextBlock x:Name="lblLastHeartbeat" Text="" Foreground="#FFCCCCCC" Margin="0,2"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Activation Log Area -->
                <GroupBox Header="Activation Log" Foreground="White">
                    <GroupBox.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="16" FontWeight="Bold" Foreground="#FF007ACC"/>
                        </DataTemplate>
                    </GroupBox.HeaderTemplate>

                    <StackPanel Margin="10">
                        <TextBox x:Name="txtActivationLog" Style="{StaticResource ModernTextBox}"
                                 Height="200" TextWrapping="Wrap" AcceptsReturn="True"
                                 VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                                 Text="System started, waiting for activation...&#x0A;"/>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <Button x:Name="btnClearLog" Content="Clear Log" 
                                    Style="{StaticResource ModernButton}"
                                    Click="BtnClearLog_Click" Width="100"/>
                            <Button x:Name="btnSaveLog" Content="Save Log" 
                                    Style="{StaticResource ModernButton}"
                                    Click="BtnSaveLog_Click" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#FF1E1E1E" Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="lblStatus" Grid.Column="0" 
                          Text="Ready" Foreground="#FFCCCCCC" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Ellipse x:Name="statusIndicator" Width="12" Height="12" 
                            Fill="#FFFF6B6B" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <TextBlock x:Name="lblConnectionStatus" Text="Offline" 
                              Foreground="#FFCCCCCC" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

    </Grid>
</Window>